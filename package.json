{
  "name": "ansa-app",
  "version": "0.0.0",
  "description": "ansa application",
  "main": "server/dist/bin/www.js",
  "scripts": {
    "build": "npm run copy && npm run sass && npm run tsc",
    "build:watch": "concurrently --raw \"npm run copy:watch\" \"npm run sass:watch\" \"npm run tsc:watch\"",
    "copy": "cpx 'client/src/**/*.{css,html,js}' client/dist && cpx 'server/src/views/*.jade' server/dist/views",
    "copy:watch": "concurrently \"cpx --watch 'client/src/**/*.{css,html,js}' client/dist\" \"cpx --watch 'server/src/views/*.jade' server/dist/views\"",
    "preinstall": "npm prune",
    "sass": "node-sass --output client/dist client/src",
    "sass:watch": "node-sass --output client/dist --recursive --watch client/src",
    "start": "npm run build && pm2 startOrRestart ecosystem.json --env production",
    "start:development": "npm run build && concurrently --raw \"npm run build:watch\" \"pm2-dev start ecosystem.json\"",
    "start:staging": "npm run build && pm2 startOrRestart ecosystem.json --env staging",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc --project client/tsconfig.json && tsc -project server/tsconfig.json",
    "tsc:watch": "concurrently --raw \"tsc --watch --project client/tsconfig.json\" \"tsc --watch --project server/tsconfig.json\""
  },
  "author": "jasonroyle",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "2.3.1",
    "@angular/compiler": "2.3.1",
    "@angular/core": "2.3.1",
    "@angular/forms": "2.3.1",
    "@angular/http": "2.3.1",
    "@angular/material": "2.0.0-beta.1",
    "@angular/platform-browser": "2.3.1",
    "@angular/platform-browser-dynamic": "2.3.1",
    "@angular/router": "3.3.1",
    "@angular/upgrade": "2.3.1",
    "body-parser": "1.15.2",
    "cookie-parser": "1.4.3",
    "core-js": "2.4.1",
    "debug": "2.4.5",
    "express": "4.14.0",
    "jade": "1.11.0",
    "morgan": "1.7.0",
    "reflect-metadata": "0.1.8",
    "rxjs": "5.0.0-rc.4",
    "serve-favicon": "2.3.2",
    "socket.io": "1.7.2",
    "systemjs": "0.19.41",
    "zone.js": "0.7.3"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/cookie-parser": "1.3.30",
    "@types/core-js": "0.9.35",
    "@types/debug": "0.0.29",
    "@types/express": "4.0.34",
    "@types/morgan": "1.7.32",
    "@types/node": "6.0.52",
    "@types/serve-favicon": "2.2.28",
    "@types/socket.io": "1.4.27",
    "concurrently": "3.1.0",
    "cpx": "1.5.0",
    "node-sass": "4.1.1",
    "rimraf": "2.5.4",
    "typescript": "2.1.4"
  }
}
